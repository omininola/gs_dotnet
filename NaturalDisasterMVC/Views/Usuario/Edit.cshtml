@model NaturalDisasterMVC.DTO.UsuarioRequest

@{
    var cidades = ViewBag.Cidades as List<Cidade>;
}

<h2 class="text-center mb-4">Editar Usu√°rio</h2>

<form asp-action="Edit" method="post">
    <div class="form-group mb-4">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-4">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-4">
        <label>Senha</label>
        <input asp-for="Senha" type="password" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-4">
        <label>Cidade</label>
        <select asp-for="CidadeId" class="form-control">
            <option value="">Selecione uma cidade</option>
            @foreach (var cidade in cidades)
            {
                <option value="@cidade.Id" selected=@(cidade.Id == Model.CidadeId)>@cidade.Nome</option>
            }
        </select>
        <span asp-validation-for="CidadeId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Editar</button>
</form>